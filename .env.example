# ===================
# API KEYS
# ===================
# Gemini API key - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API key - https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Mistral API key - https://console.mistral.ai/api-keys
MISTRAL_API_KEY=your_mistral_api_key_here

# Cerebras API key - https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ===================
# SERVER CONFIGURATION
# ===================
# Local embedding server URL
EMBEDDING_SERVER_URL=http://localhost:5001

# Main app configuration
FLASK_APP_HOST=127.0.0.1
FLASK_APP_PORT=5000
FLASK_DEBUG=True

# ===================
# FILE UPLOAD SETTINGS
# ===================
# Maximum file size in bytes (100MB)
MAX_CONTENT_LENGTH=104857600

# ===================
# CHUNKING PARAMETERS
# ===================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===================
# RETRIEVAL SETTINGS
# ===================
RERANK_SERVER_URL=http://localhost:5002
RERANK_SCORE_THRESHOLD=0
MAX_CONTEXT_TOKENS=7000

# ===================
# POSTGRESQL DATABASE
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=learnforgedb
POSTGRES_USER=your-postgres-user
POSTGRES_PASSWORD=your-postgres-password

# ===================
# AUTHENTICATION
# ===================
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# ===================
# EMAIL (SMTP) - Required for signup/password reset
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@learnforge.com
APP_URL=http://localhost:5000

# ===================
# S3/R2 STORAGE (Required)
# ===================
# For Cloudflare R2:
#   S3_ENDPOINT_URL=https://<account_id>.r2.cloudflarestorage.com
# For AWS S3:
#   S3_ENDPOINT_URL=https://s3.<region>.amazonaws.com
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=learnforge-documents
S3_REGION=auto

# ===================
# DEFAULT SETTINGS
# ===================
DEFAULT_USER_ID=default
DEFAULT_WORKSPACE_ID=default
